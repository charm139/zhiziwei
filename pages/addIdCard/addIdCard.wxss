#addCardBox {
	width: 750rpx;
    overflow: hidden;
    border-top: 1px solid #f5f5f5;
}
#addCardBox .edit-tips {
	padding: 16rpx;
	font-size: 24rpx;
	letter-spacing: 2rpx;
	background: #eee;
	color: #aaa;
}
#addCardBox .addCardItem{
	display: flex;
	padding: 16rpx;
    font-size: 28rpx;
	border-bottom: 1px solid #eee;
	background: #fff;
}
#addCardBox .addCardItem text {
	color:  #707070;
}
#addCardBox .addCardItem input,
#addCardBox .addCardItem .addCardInfo {
	 display: inline-block;
	 padding-left: 20rpx;
	 min-height: 0;
	 width: 560rpx;
}

#addCardBox .pic-box {
	width: 750rpx;
	padding: 20rpx 32rpx;
	color: #707070;
	overflow: hidden;
}
#addCardBox .pic-box .item-pic {
	float: left;
	position: relative;
	margin-right: 20rpx;
}
#addCardBox .pic-box .item-pic {
	font-size: 28rpx;
}
#addCardBox .pic-box .item-pic view{
	width: 180rpx;
	height: 180rpx;
	margin-top: 20rpx;
	background: url(data:image/png;base64,) center center no-repeat;
	background-size: 100%;
}
#addCardBox .pic-box .item-pic view image {
	display: block;
	width: 100%;
	height: 100%;
}


#addCardBox .addCardItem .addCardLabel {
	display: inline-block;
	width: 140rpx;
	text-align: right;
}
.addCard-save {
	width: 640rpx;
	height: 90rpx;
	line-height: 90rpx;
    margin: 90rpx 55rpx;
    border-radius: 12rpx;
	text-align: center;
	font-size: 28rpx;
	background-color: #76C1BC;
	color: #fff;
}
